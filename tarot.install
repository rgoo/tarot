<?php

/**
 * implements hook_schema
 *
 * notes:  this function adds two tables, tarot_cards & tarot_readings, to the db
 */
function tarot_schema()
{
    
    $schema['tarot_cards'] = array(
        'description' => 'Cards of the Tarot Deck',
        'fields' => array(
            'card_id' => array(
                'description' => 'Card ID',
                'type' => 'int',
                'not null' => TRUE
            ),
            'name' => array(
                'description' => 'Card Name',
                'type' => 'text',
                'not null' => TRUE
            ),
            'suit' => array(
                'description' => 'Card Suit',
                'type' => 'text',
                'not null' => TRUE
            )
        ),
        'primary key' => array(
            'card_id'
        ),
        'unique keys' => array(
            'card_id' => array(
                'card_id'
            )
        )
    );
    
    $schema['tarot_readings'] = array(
        'description' => 'Saved Tarot readings by users',
        'fields' => array(
            'reading_id' => array(
                'description' => 'reading id',
                'type' => 'int',
                'not null' => TRUE
            ),
            'uid' => array(
                'description' => 'user id',
                'type' => 'int',
                'not null' => TRUE
            ),
            'reading' => array(
                'description' => 'reading',
                'type' => 'blob',
                'not null' => TRUE
            ),
            'timestamp' => array(
                'description' => 'timestamp',
                'type' => 'int',
                'not null' => TRUE
            )
        ),
        'primary key' => array(
            'reading_id'
        )
    );
    
    
    return $schema;
}

